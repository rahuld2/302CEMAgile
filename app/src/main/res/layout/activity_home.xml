<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rahul.login.Home"
    android:touchscreenBlocksFocus="false">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/BtnMap"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#9c2a95"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CheckList"
        android:id="@+id/btnCheck"
        android:background="#e65101"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnBuilding"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Buildings"
        android:id="@+id/btnBuilding"
        android:background="#282b60"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/BtnMap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events"
        android:id="@+id/btnEvents"
        android:background="#00a7c8"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnCheck"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="social media"
        android:id="@+id/btnSocial"
        android:background="#8dc025"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnEvents"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnEvents"
        android:layout_alignEnd="@+id/btnEvents" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your ID"
        android:id="@+id/btnID"
        android:background="#f09608"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnSocial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/btnLogout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
